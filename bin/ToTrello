#!/usr/bin/env ruby

require 'totrello'

TRELLO_DEVELOPER_PUBLIC_KEY = ENV['TRELLO_DEVELOPER_PUBLIC_KEY']
TRELLO_MEMBER_TOKEN = ENV['TRELLO_MEMBER_TOKEN']


dir = ARGV[0].to_s
if dir == ''
  dir = Dir.pwd
end


puts "You've specified to work in: #{dir}"
trel = Totrello::Trelloize.new(dir)
trel.find_todo_items
